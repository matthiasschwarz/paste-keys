{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "homepage_url": "https://github.com/matthiasschwarz/paste-keys",
  "author": "Matthias Schwarz",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "offline_enabled": true,
  "permissions": ["storage"],
  "optional_permissions": ["clipboardWrite"],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "16": "icons/16-white.png",
      "48": "icons/48-white.png",
      "128": "icons/128-white.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "all_frames": true,
      "match_about_blank": true,
      "js": ["js/pasteKeys.js"]
    }
  ],
  "options_ui": {
    "page": "options.html"
  }
}
